{
  "name": "futureplate",
  "version": "0.2.0",
  "description": "Boilerplate project for future-facing tech: universal react + flux + react-router + css modules + code splitting + hot module replacement",
  "engine": "node 4.2.1",
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "npm run clean",
    "build": "webpack",
    "prebuild:dev": "npm run clean",
    "build:dev": "NODE_ENV=development webpack -w",
    "build:hot": "HMR=true npm run build:dev",
    "start": "node build/server/index.js",
    "start:dev": "NODE_ENV=development node_modules/nodemon/bin/nodemon.js build/server/index.js",
    "start:hot": "HMR=true npm run start:dev",
    "hot": "NODE_ENV=development node webpack-dev-server.js"
  },
  "license": "MIT",
  "author": {
    "name": "Danny Bowman @dbow",
    "url": "http://www.d-bow.com",
    "email": "danny@d-bow.com"
  },
  "keywords": [
    "boilerplate",
    "universal",
    "react",
    "reactjs",
    "flux",
    "react-router",
    "css modules",
    "code splitting",
    "hot module replacement",
    "hmr",
    "hot",
    "reload",
    "webpack"
  ],
  "devDependencies": {
    "nodemon": "^1.8.1",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "autoprefixer": "^6.3.1",
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "body-parser": "^1.15.0",
    "css-loader": "^0.23.1",
    "express": "^4.13.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "jade": "^1.11.0",
    "lodash": "^3.10.1",
    "null-loader": "^0.1.1",
    "postcss-import": "^8.0.2",
    "postcss-loader": "^0.8.0",
    "react": "^0.14.7",
    "react-addons-update": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-router": "^2.0.0-rc4",
    "redial": "^0.4.1",
    "rimraf": "^2.5.1",
    "serialize-javascript": "^1.1.2",
    "serve-favicon": "^2.3.0",
    "source-map-support": "^0.4.0",
    "style-loader": "^0.13.0",
    "superagent": "^1.7.2",
    "webpack": "^1.12.12"
  }
}
